<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/more_light_grey"
    tools:context=".NowPlayingBar">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:paddingHorizontal="20dp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="---"
                        android:textSize="18dp"
                        android:layout_marginRight="5dp"
                        android:id="@+id/name_song"
                        />
                    <net.steamcrafted.materialiconlib.MaterialIconView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:materialIcon="heart_outline"
                        app:materialIconColor="@color/gray"
                        app:materialIconSize="20dp"
                        android:scaleType="center"
                        android:background="@android:color/transparent"
                        android:layout_toRightOf="@+id/name_song"
                        android:layout_marginTop="4dp"
                        android:id="@+id/heart"
                        />
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textSize="14dp"
                    android:textColor="@color/gray"
                    android:id="@+id/artist_name"
                    />
            </LinearLayout>


        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:tint="@color/gray"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/queue"
            android:layout_centerVertical="true"
            android:id="@+id/play"/>
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_queue_music"
            android:background="@android:color/transparent"
            android:tint="@color/gray"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/queue"/>

    </RelativeLayout>


</FrameLayout>