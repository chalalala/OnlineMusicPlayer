<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ArtistSongsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/artist_songg"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_test"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="matrix"
            android:alpha="0.8"

            />

        <ImageButton
            android:id="@+id/back_button1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignTop="@+id/img_test"
            android:layout_margin="5dp"
            android:background="@color/transparent"
            android:src="@drawable/ic_arrow_back"
            android:tint="@color/gray" />

        <TextView
            android:id="@+id/songofartist_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_test"
            android:layout_margin="10dp"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- TODO: Update blank fragment layout -->
        <ListView
            android:id="@+id/songofartist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_test" />
    </RelativeLayout>

</FrameLayout>