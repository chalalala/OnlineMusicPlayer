<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:layout_height="match_parent"
    tools:context=".MusicPlayerFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/cover_musicplayer"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:id="@+id/image_album"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Song Name"
            android:textSize="30sp"
            android:layout_marginTop="20dp"
            android:singleLine="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:ellipsize="marquee"
            android:scrollHorizontally="true"
            android:textColor="@color/black"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Artist"
            android:textSize="20sp"
            android:singleLine="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:ellipsize="marquee"
            android:scrollHorizontally="true"
            android:textColor="@color/gray"
            android:layout_gravity="center"
            />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/shuffle"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:scaleType="fitXY"
                android:layout_marginRight="25dp"
                android:layout_toLeftOf="@+id/previous"
                android:layout_centerVertical="true"
                android:tint="@color/gray"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_shuffle" />

            <ImageButton
                android:id="@+id/previous"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:layout_marginRight="25dp"
                android:layout_toLeftOf="@+id/play"
                android:layout_centerVertical="true"
                android:tint="@color/gray"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_skip_previous" />

            <net.steamcrafted.materialiconlib.MaterialIconView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:materialIcon="play_circle"
                app:materialIconColor="@color/design_default_color_primary"
                app:materialIconSize="80dp"
                android:scaleType="center"
                android:background="@android:color/transparent"
                android:layout_toRightOf="@+id/name_song"
                android:layout_marginTop="4dp"
                android:layout_centerVertical="true"
                android:layout_centerInParent="true"
                android:id="@+id/play"
                />

            <ImageButton
                android:id="@+id/next"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:layout_marginLeft="25dp"
                android:layout_toRightOf="@+id/play"
                android:layout_centerVertical="true"
                android:tint="@color/gray"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_skip_next" />

            <net.steamcrafted.materialiconlib.MaterialIconView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:materialIcon="heart_outline"
                app:materialIconColor="@color/gray"
                app:materialIconSize="28dp"
                android:scaleType="center"
                android:background="@android:color/transparent"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="25dp"
                android:layout_toRightOf="@+id/next"
                android:layout_centerVertical="true"
                android:id="@+id/heart"
                />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>