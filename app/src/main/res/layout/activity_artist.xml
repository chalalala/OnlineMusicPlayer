<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ArtistActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/container">
        <fragment
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:name="vn.edu.usth.onlinemusicplayer.CustomActionBarFragment"/>

        <fragment
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:name="vn.edu.usth.onlinemusicplayer.ArtistFragment"/>

        <fragment
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:name="vn.edu.usth.onlinemusicplayer.NowPlayingBar"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>