<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:name="vn.edu.usth.onlinemusicplayer.QueueFragment"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical">
    <TextView
        android:id="@+id/nowPlaying"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Now Playing"
        android:textSize="20sp"
        android:textColor="#000000"
        />
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:padding="8dip" >

        <TextView
            android:id="@+id/NowPlayingArtistName"
            android:layout_width="fill_parent"
            android:layout_height="26dip"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="Demi Lovato"
            android:textColor="#cbb2fa"
            android:textSize="12sp"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/nowplayingTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/NowPlayingArtistName"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_alignWithParentIfMissing="true"
            android:gravity="center_vertical"
            android:text="Confident"
            android:textStyle="bold"
            android:textColor="#874eee"
            android:textSize="16sp"
            android:layout_alignParentEnd="true" />

        <ImageButton
            android:id="@+id/play_pause"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:contentDescription="Play/Pause Icon"
            android:background="@drawable/button_custom" />

    </RelativeLayout>
    <TextView
        android:id="@+id/nextUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next Up"
        android:textSize="20sp"
        android:textColor="#000000"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerlist"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/fragment_queue" />

</LinearLayout>